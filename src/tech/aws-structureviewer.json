      "Sid": "ViewStructuralObjects",
      "Effect": "Allow",
      "Action": [
        "tag:GetResources",
        "sqs:GetQueueUrl",
        "sqs:GetQueueAttributes",
        "sns:GetTopic*",
        "sns:GetSubscriptionAttributes",
        "schemas:SearchSchemas",
        "s3:HeadBucket",
        "s3:GetBucket*",
        "s3:Get*Configuration",
        "route53:Get*",
        "logs:getLogEvents",
        "logs:filterLogEvents",
        "lambda:GetPolicy*",
        "lambda:GetFunction*",
        "lambda:GetAccountSettings",
        "kms:GetKeyPolicy",
        "iam:GetRole*",
        "iam:GetPolicy*",
        "iam:GetGroup",
        "iam:GetAccountSummary",
        "guardduty:Get*",
        "es:GetCompatibleElasticsearchVersions",
        "cloudwatch:Get*",
        "cloudtrail:GetTrailStatus",
        "cloudtrail:GetEventSelectors",
        "cloudfront:GetReporting*",
